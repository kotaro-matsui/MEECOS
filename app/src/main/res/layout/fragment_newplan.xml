<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="開始日時"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/startDateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:background="@color/clear"
            android:inputType="date"
            android:text="@string/schedule_date"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/startTimeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:background="@color/clear"
            android:inputType="time"
            android:text="時刻を選択"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="終了日時" />

        <Button
            android:id="@+id/endDateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:background="@color/clear"
            android:textColor="@color/white"
            android:inputType="date"
            android:text="@string/schedule_date"/>

        <Button
            android:id="@+id/endTimeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:background="@color/clear"
            android:textColor="@color/white"
            android:inputType="time"
            android:text="時刻を選択" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="内容" />

        <EditText
            android:id="@+id/contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="テストテキスト"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <Button
        android:id="@+id/plan_submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="登録"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/realm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レルム内容表示１"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/realm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レルム内容表示2"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/realm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レルム内容表示3"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/realm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="レルム内容表示4"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/realmView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="realm表示"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/textReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="realm表示"
        android:textColor="@color/black"/>
</LinearLayout>

